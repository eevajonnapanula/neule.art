{% set metaTitle = metadata[locale].metaTitle %} {% set metaDescription = metadata[locale].metaDescription %} {% set
metaImage = metadata[locale].metaImage %} {% breadcrumbs breadcrumbs, locale, eleventy.serverless.query %}
<section>
  <h1>Pick your colors for a sweater</h1>
  <p>{% riddariInfo locale %}</p>

  <div class="color-picker-wrapper switcher">
    <div>
      {% riddariMultiple 'transparent', 'transparent', 'transparent', 'transparent', 'transparent', 'transparent', 'transparent', 'transparent', 'transparent', 'transparent', 'transparent', 'transparent', 'transparent', 'transparent', 'transparent' %}
      <div id="shirt-visually-hidden-text" class="visually-hidden"></div>
     </div>
    <div>
      <div class="cta-link">
        <a href="/en/yarns/lettlopi/">All colors </a>
      </div>
      <form method="get" action="/en/patterns/sweaters/multicolor/" class="colors-form">
        <div id="multiple-colors-form">
          {%- for color in colorOptions.multipleColors %} {% colorSelect color.labelKey, color.identifier,
          translations[locale].multipleColorTexts[color.labelKey], eleventy.serverless.query[color.queryKey],
          color.defaultColor %} {% endfor -%}
        </div>
        <button type="submit">Check the result</button>
      </form>

      {% randomColorsLinkSweaterMulticolor locale %}

    </div>
  </div>
</section>
  <section>
    <h2>Color Availability</h2>
    
    <div class="color-picker-wrapper switcher">
      {% colorAvailability locale %}</div>

    <div>
  
      <div>Data fetched: {% time stock.updated %}</div></div>
  
      <div>{% set comma = joiner() %}
        <p>Stores, that the data is currently fetched from: {% for store in yarnStores.stores -%}{{comma()}} {{yarnStores[store].name}} {%- endfor %}</p>
        <p>If you have a store, that should be here, in mind, send me a message. You can find the contact information from <a href="/en/about/">About-page.</a></p>
      </section>
